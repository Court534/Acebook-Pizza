<% @posts.each do |post| %>
  <p><%=post.user%>: <%=post.message%></p>
  <h2>Comments</h2>
  <% post.comments.each do |comment| %>
    <p><%= comment.user %>: <%= comment.body %></p>
  <% end %>
  <h2>Add a comment:</h2>
  <%= form_with model: [ post, post.comments.build ] do |form| %>
    <p>
      <%= form.label :user %><br>
      <%= form.text_field :user %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
