<% @posts.reverse.each do |post| %>
  <p><%=post.user.username %>: <%=post.message%></p>
  
  <% if post.image.attached? %>
  <%= image_tag post.image %>
  <%end%>
  <%= link_to "View comments", post %>
<% end %>


<p><%= link_to new_post_path do %>
  New post
<% end %></p>

<%= form_tag '/login' do %>
<%= submit_tag "Logout" %>
<% end %>

