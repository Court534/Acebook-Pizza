<h1><%= @album.name %></h1>


<% if @user.id == session[:user_id]%>
<div class="text-right">
    <%= link_to "Add new photo to album", new_user_album_photo_path(@user, @album), :class => "btn btn-primary"%>
  </div>
<%end%>

<div class= "row">
    <% @album.photos.reverse.each do |photo| %>
        <div class="col-sm-3">
            <%= image_tag photo.image.variant(resize_to_limit: [300, 300]), class: "img-fluid img-thumbnail" %>
        </div>
    <% end %>
</div>

